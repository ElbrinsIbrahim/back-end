@model firstCodeAndHelpers.Models.user
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="row" style="margin:auto" >
        <div class="col-8" style="margin:auto">
            <form method="post">
                <div class="mb-3">
                    @Html.LabelFor(n => n.email)
                    @Html.TextBoxFor(n => n.email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.email, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(n => n.password)
                    @Html.PasswordFor(n => n.password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.password, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="login" class="btn btn-info" />
                @if (ViewBag.state != null)
            {
                <p class="text-danger">@ViewBag.state</p>
            }
            </form>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
